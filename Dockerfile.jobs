FROM python:3.11-slim

WORKDIR /app

# Copy scripts and job folders
COPY run-jobs.sh ./
COPY NewsAgentData/NewsScraper ./NewsAgentData/NewsScraper
COPY NewsAgentData/NewsDataProcessor ./NewsAgentData/NewsDataProcessor

# Install dependencies for both jobs
RUN apt-get update && apt-get install -y build-essential \
    && pip install --no-cache-dir \
       -r NewsAgentData/NewsScraper/requirements.txt \
       -r NewsAgentData/NewsDataProcessor/requirements.txt \
    && apt-get purge -y --auto-remove build-essential \
    && rm -rf /var/lib/apt/lists/*

RUN chmod +x run-jobs.sh

ENTRYPOINT ["bash", "run-jobs.sh"]
